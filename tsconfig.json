{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.vue",
    "docs/.vitepress/**/*.ts",
    "docs/**/*.vue",
    "./components/**/*.vue",
    "./components/**/*.ts",
    "types/**/*.ts",
    "uno.config.ts",
    "pages/**/*.vue",
    "__tests__/**/*.ts",
    "__tests__/**/*.tsx"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "jsx": "preserve"
  }
}